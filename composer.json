{
    "name": "hskrasek/arazzo-parser",
    "description": "Parse Arazzo specifications into plain old PHP objects.",
    "keywords": [
        "oai",
        "openapi",
        "arazzo",
        "parser"
    ],
    "homepage": "https://github.com/hskrasek/arazzo-parser",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Hunter Skrasek",
            "email": "hunterskrasek@me.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "cuyz/valinor": "^1.14",
        "justinrainbow/json-schema": "^6.2",
        "symfony/yaml": "^7.2",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "madewithlove/license-checker": "^2.0",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-mockery": "^2.0",
        "roave/security-advisories": "dev-latest",
        "spatie/ray": "^1.41"
    },
    "autoload": {
        "psr-4": {
            "HSkrasek\\Arazzo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HSkrasek\\Arazzo\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
